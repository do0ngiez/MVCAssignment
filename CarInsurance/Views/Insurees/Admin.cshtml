@model IEnumerable<CarInsurance.Models.Insuree>

@{
    ViewData["Title"] = "Admin View";
}

<h2>Admin View - All Quotes</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Quote</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var insuree in Model)
        {
            <tr>
                <td>@insuree.FirstName</td>
                <td>@insuree.LastName</td>
                <td>@insuree.EmailAddress</td>
                <td>@insuree.Quote.ToString("C")</td> <!-- Format the quote as currency -->
            </tr>
        }
    </tbody>
</table>
